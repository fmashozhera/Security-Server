@model IEnumerable<SecureTokenServer.Models.RoleIndexVm>

@{
    Layout = "_AccessControlLayout";
}

    <div class="grants">
        <div class="row page-header">
            <div class="col-sm-10">
                <h1>
                    Roles
                </h1>
            </div>
        </div>

        @if (Model.Any() == false)
        {
            <div class="row">
                <div class="col-sm-8">
                    <div class="alert alert-info">
                        You have not defined any roles. <br />
                        <a asp-controller="Roles" asp-action="Create" title="Create Role"> Create Role</a>
                    </div>
                </div>
            </div>
        }
        else
        {

            <button type="button" class="btn btn-primary btn-sm action-btn mb-1" data-toggle="add-client-resource" data-target="#modal-container" data-url="@Url.Action("Create","Roles")">
                Create Role
            </button>
            <div class="table-responsive">
                <table class="table table-sm table-striped table-bordered table-compact">
                    <thead>
                        <tr>
                            <th scope="col">Role</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var role in Model)
                        {
                            <tr>
                                <td>@role.Name</td>
                                <td>
                                    <a class="btn btn-sm action-btn" asp-controller="Roles" asp-route-roleId="@role.Id" asp-action="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a class="btn btn-sm action-btn" asp-controller="Roles" asp-route-roleId="@role.Id" asp-action="Manage" title="Manage Role"> <i class="fas fa-tasks icon-btn"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
