@model SecureTokenServer.Models.ManageApiResourceViewModel

<div class="modal fade" id="createClaimModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Delete Scope</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <div class="alert alert-info">
                    <p>
                        <dl class="row">
                            <dt class="col-5">Resource Name</dt>
                            <dd class="col-7">@Model.Name</dd>
                            <dd>
                        </dl>
                    </p>
                   
                    <table class="table table-sm table-striped table-compact">  
                        <thead>
                            <tr>
                                <th>Scope</th>
                                <th>Claims</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var scope in Model.Scopes)
                            {                                
                                <tr>
                                    <td>@scope.Name</td>
                                    <td>
                                        @foreach (var claim in scope.UserClaims)
                                        {
                                            <span class="pl-1 pr-1 pt-0 pb-0" style="border:1px solid silver;">@claim</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <form asp-action="RemoveResource" id="add-claim">
                    @Html.HiddenFor(Model => Model.Name)

                    <div class="alert alert-warning">
                        <p>
                            Are you sure you want to delete this scope?
                        </p>
                        <div class="form-group row container">
                            <button type="button" class="btn btn-sm btn-danger action-btn mb-1" data-save="modal">Delete</button>
                        </div>
                    </div>
                </form>


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>