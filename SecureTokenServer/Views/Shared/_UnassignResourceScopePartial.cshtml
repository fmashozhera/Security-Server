@model SecureTokenServer.Models.ClientResourceVm

<div class="modal fade" id="createClaimModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Delete Scope</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="alert alert-info">
                    <p>
                        <dl class="row">
                            <dt class="col-5">Resource Name</dt>
                            <dd class="col-7">@Model.ResourceName</dd>
                            <dt class="col-5">Display Name</dt>
                            <dd class="col-7">@Model.DisplayName</dd>
                            <dt class="col-5">Description</dt>
                            <dd class="col-7">@Model.ResourceDescription</dd>
                        </dl>
                    </p>

                </div>

                <form asp-action="UnassignResource" id="add-claim">
                    @Html.HiddenFor(Model => Model.ResourceName)
                    @Html.HiddenFor(Model => Model.ClientName)

                    <div class="alert alert-warning">
                        <p>
                            Are you sure you want to unassign this resource from @Model.ClientName?
                        </p>
                        <div class="form-group row container">
                            <button type="button" class="btn btn-sm btn-danger action-btn mb-1" data-save="modal">Delete</button>
                        </div>
                    </div>
                </form>


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>